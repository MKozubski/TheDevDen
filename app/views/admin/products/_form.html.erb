<!-- app/views/admin/products/_form.html.erb -->

<%= form_with(model: product, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :product_name %>
    <%= form.text_field :product_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :product_description %>
    <%= form.text_area :product_description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :product_price %>
    <%= form.number_field :product_price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :category_name, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
