<%= form_with model: [:admin, @category], local: true do |form| %>
  <div class="form-group">
    <%= form.label :category_name %>
    <%= form.text_field :category_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
  <div class="form-group">
    <%= link_to 'Back to Products', admin_products_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
