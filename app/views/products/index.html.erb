<!-- app/views/products/index.html.erb -->

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.product_description %></td>
        <td><%= number_to_currency(product.product_price) %></td>
        <td><%= product.category.category_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
